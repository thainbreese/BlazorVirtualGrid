@page "/"
@inject HttpClient Http
@using BlazorVirtualGrid.App.Services

@if (Data == null)
{
    <Loader></Loader>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <VGrid Data=@Data ColumnWidths=@ColumnWidths />
        </div>
        <div class="col-md-6">
            <Grid Data=@Data ColumnWidths=@ColumnWidths></Grid>
        </div>
    </div>
}

@functions {

    GridModel[] Data;
    int[] ColumnWidths = { 35, 150, 150, 150, 150, 150 };

    protected override async Task OnInitAsync()
    {
        Data = await Http.GetJsonAsync<GridModel[]>("sample-data/data.json");
        await base.OnInitAsync();
    }

}